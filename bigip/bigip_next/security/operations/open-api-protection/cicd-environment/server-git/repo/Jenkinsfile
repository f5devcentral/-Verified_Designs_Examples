pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Navigate to the 'src' directory and run npm install
                    dir('src') {
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Build Project') {
            steps {
                script {
                    // Navigate to the 'src' directory and run npm run build
                    dir('src') {
                        sh 'npm run build'
                    }
                }
            }
        }

        stage('Update Swagger Definition at BigIP Next') {
            steps {
                dir('automation') {
                    ansiblePlaybook(
                        playbook: 'playbooks/site.yml'
                    )
                }
            }
        }
    }
}
